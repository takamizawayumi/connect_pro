.side_bar
  .user_name
    .user_box
      %p.name 
        = current_user.name 
      %ul.menu
        =link_to new_group_path, class:"Contents_btn" do
          =icon('fas','edit')
        %li.edit-icon
        =link_to edit_user_path(current_user) do
          =icon('fas','cog')
        %li.cog-icon
  .group_list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message
